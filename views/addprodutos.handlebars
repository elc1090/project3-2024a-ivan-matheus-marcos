{{#if erros}}
    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{/each}}
{{/if}}
<h3>Novo produto</h3>
<div class="card">
    <div class="card-body">
        <form action="/produtos/novo" method="POST" >
            <label for="nome">Nome</label>
                <input class="form-control" type="text" name="nome" id="nome" placeholder="Nome do produto" required>
            <label for="descricao">Descrição:</label>
                <input class="form-control" type="text" name="descricao" id="descricao" placeholder="Descrição do produto" required>
            <label for="peso">Peso:</label>
                <input class="form-control" type="number" name="peso" id="peso" placeholder="Peso do produto" required>
                <br>
            <button type="submit" class="btn btn-success">Criar produto</button>
        </form>
    </div>
</div>

