{{#if erros}}
    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{/each}}
{{/if}}
<h3>Editar entrada</h3>
<div class="card">
    <div class="card-body">
        <form action="/estoques/edit" method="POST" >
            <input type="hidden" name="id" value="{{estoque._id}}">
            <label for="quantidade">Quantidade</label>
                <input  class="form-control" type="number" name="quantidade" id="nome" placeholder="quantidade da entrada" value="{{estoque.quantidade}}" required>
            <label for="observacoes">Observacoes: </label>
                <input class="form-control" type="text" name="observacoes" id="observacoes" placeholder="Observações" value="{{estoque.observacoes}}" required>
            <label for="dataV">Data de validade original: {{estoque.dataV}} </label>
                <input class="form-control" type="date" name="dataV" id="dataV" value="{{estoque.dataV}}" required> 
            <label for="produto" class="mt-4">Produto original: {{estoque.produto.nome}}</label>
            <select name="produto" class="form-select" required>
                {{#each produtos}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum produto registrado</option>
                {{/each}}
            </select>
                <br>
            <button type="submit" class="btn btn-success">Editar entrada</button>
        </form>
    </div>
</div>
