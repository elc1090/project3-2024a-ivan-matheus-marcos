<h2>Lista de categorias</h2>
<hr>
<a href="/categorias/add">
    <button class="btn btn-success">Nova categoria</button>
</a>

{{!-- {{#if categorias}} --}}
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <a href="/categorias/edit/{{_id}}" class="d-inline">
                <button class="btn btn-success mt-1">Editar categoria</button>
            </a>           
            <form action="/categorias/deletar" method="POST" class="d-inline">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2"> Deletar categoria</button>
            </form>            
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhum registo </h4>
{{/each}}