{{#each postagens}}
<div class="card mt-3">
    <div class="card-body">        
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p><br>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>Data: {{data}}</small>        
    </div>
</div>
{{else}}
    <h5>Nenhuma Categoria</h5>
{{/each}}