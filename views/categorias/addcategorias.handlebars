{{#if erros}}
    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{/each}}
{{/if}}
<h3>Nova categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/categorias/nova" method="POST" >
            <label for="nome">Nome</label>
                <input class="form-control" type="text" name="nome" id="nome" placeholder="Nome da categoria">           
                <br>
            <button type="submit" class="btn btn-success">Criar categoria</button>
        </form>
    </div>
</div>

