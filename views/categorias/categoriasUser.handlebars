<h2>Lista de categorias</h2>
<hr>
<a href="/categorias/add">
    <button class="btn btn-success">Nova categoria</button>
</a>

{{!-- {{#if categorias}} --}}
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>                     
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhum registo </h4>
{{/each}}